<% posts.each do |post| %>
  <div class="col-md-3 mb-3">
    <div class="card h-100">
      <%= link_to admin_post_path(post), class: "card-link" do %>
        <div style="max-width: 100%; max-height: 300px; overflow: hidden; position: relative;">
          <%= image_tag post.image, class: "card-img-top", style: "object-fit: contain; width: 100%; height: 100%; object-position: center;" %>
        </div>
        <div class="card-body">
          <h6 class="card-title"><%= post.name %></h6>
          <p class="card-text"><%= number_with_delimiter(post.price) %>円</p>
          <p class="card-text">
            <% if @post.favorites %>
              <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= post.favorites.count %>いいね
            <% else %>
              <i class="fas fa-heart" aria-hidden="true"></i>
              <%= post.favorites.count %>いいね
            <% end %><br>
            コメント数: <%= post.comments.count %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>