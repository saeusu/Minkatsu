<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="underline mt-2"><%= @user.name %>さんの会員情報編集</h4>
    <%= form_with model: @user,url: admin_user_path(@user) do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>名前</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= f.text_field :nickname %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", { value: :false }  %>

            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会済", { value: :true } %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
</div>