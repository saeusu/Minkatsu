<header>
  <nav class="navbar navbar-expand-lg navbar-light fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/"><span class="highlight">Minkatsu</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to "Minkatsuとは", about_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "投稿一覧", posts_path, class: 'nav-link' %></li>
            <li class="nav-item">
              <%= link_to notifications_path, class: 'nav-link' do %>
                <i class="fa-regular fa-bell"></i>通知
              <% end %>  
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa-regular fa-circle-user"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to mypage_path, class: 'dropdown-item btn-sm' do %>
                  <i class="fa-solid fa-user"></i> mypage
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to favorites_path, class: 'dropdown-item btn-sm' do %>
                  <i class="fa-solid fa-heart"></i> いいね一覧
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item btn-sm' do %>
                  <i class="fa-solid fa-right-from-bracket"></i> ログアウト
                <% end %>
              </div>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item"><%= link_to "会員一覧", admin_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "投稿一覧", admin_posts_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "コメント一覧", admin_comments_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link' %></li>
          <% else %>
            <li class="nav-item"><%= link_to "Minkatsuとは", about_path, class: 'nav-link' %></li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa-regular fa-circle-user" style="font-size: 21px;"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to new_user_registration_path, class: 'dropdown-item btn-sm' do %>
                  <i class="fa-solid fa-clipboard-user"></i> 新規登録
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to new_user_session_path, class: 'dropdown-item btn-sm' do %>
                  <i class="fa-solid fa-right-to-bracket"></i> ログイン
                <% end %>
              </div>  
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>