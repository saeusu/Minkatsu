<div class="container">
  <div class="row">
    <div class="col-12">
      
      <div class="d-flex justify-content-start underline mt-2">
        <div>
          <h4>
            <%= @user.nickname %>
          </h4>
        </div>
        <div class="ml-2">
          <% if current_user != @user %>
            <%= render "public/relationships/btn", user: @user, options: { class: ""} %>
          <% else %>
            <%= link_to edit_user_path(user), class: "btn btn-success btn-sm" do %>
          <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
      </div>
        
      <div class="row m-2">
        <%= link_to "フォロー", user_followings_path(@user), class:"btn btn-primary mr-2" %>  
        <%= link_to "フォロワー", user_followers_path(@user), class:"btn btn-primary" %>
      </div>

      <div class="row">
        <div class="col-md">
          <%= render "public/posts/card", posts: @posts %>
        </div>
      </div>
      
    </div>
  </div>
</div>