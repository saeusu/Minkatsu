<div class="container">
  <div class="row">
    <div class="col">
      <h4>マイページ</h4>
       <div class="row">
        <div class="col-md">
          <p>登録情報 <%= link_to edit_information_path, class: "btn btn-flat" do %>
            <span>編集する</span>
          <% end %>
          <table class="table">
            <tr>
              <td style="width: 30%; padding-left: 20px;">名前</td>
              <td style="width: 70%;"><%= @user.name %></td>
            </tr>
            <tr>
              <td style="width: 30%; padding-left: 20px;">ニックネーム</td>
              <td style="width: 70%;"><%= @user.nickname %></td>
            </tr>
            <tr>
              <td style="width: 30%; padding-left: 20px;">メールアドレス</td>
              <td style="width: 70%;"><%= @user.email %></td>
            </tr>
          </table>

          <!--<p>フォロー一覧  　　<　%= link_to "一覧を見る", posts_path, class:"btn btn-primary" %></p>-->
        
            <% @posts.each do |post| %>
              <div class="col-md-3">
                <div class="card mb-4">
                  <%= link_to post_path(post), class: "card-link" do %>
                  <div style="max-width: 100%; max-height: 180px; overflow: hidden; position: relative;">
                    <%= image_tag post.image, class: "card-img-top", style: "object-fit: contain; width: 100%; height: 100%; object-position: center;" %>
                  </div>
                    <div class="card-body">
                      <h6 class="card-title"><%= post.name %></h6>
                      <p class="card-text"><%= number_with_delimiter(post.price) %>円</p>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

          <!--<p>いいね  　< %= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></p>-->
    </div>
  </div>
</div>