<div class="container">
  <div class="row">
    <div class="col-12">
      
      <div class="d-flex justify-content-start underline mt-2">
        <div>
          <h4>
            <%= @user.nickname %>
          </h4>
        </div>
        <div class="ml-2">
          <% if current_user != @user %>
            <%= render "public/relationships/btn", user: @user, options: { class: ""} %>
          <% else %>
            <%= link_to edit_user_path(user), class: "btn btn-success btn-sm" do %>
          <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
      </div>
        
      <div class="row m-2">
        <div>
          <i class="fa-solid fa-user"></i>
          <%= link_to user_followings_path(@user) do %>
            <span id="following-count-<%= @user.id %>" class="name-link">
              <%= @user.followings.count %>
            </span>
            <span class="relationships-name ml-1">フォロー中</span>
          <% end %>
        </div>
        <div class="ml-3">
          <%= link_to user_followers_path(@user) do %>
            <span id="follower-count-<%= @user.id %>" class="name-link">  
              <%= @user.followers.count %>
            </span>
            <span class="relationships-name ml-1">フォロワー</span>
          <% end %>
        </div>
      </div>

        <h4 class="underline">投稿一覧</h4>
        <div class="row mt-2">
          <%= render "public/posts/card", posts: @posts %>
        </div>
      
    </div>
  </div>
</div>