<div class="container">
  <div class="row">
    <div class="col">
      <h4>マイページ</h4>
      <div>
        <%= flash[:notice] %>
      </div>
       <div class="row">
        <div class="col-md">
          <p>登録情報 <%= link_to "編集する", edit_information_path, class: "btn btn-primary" %></p>  
          <table class="table">
            <tr>
              <td style="width: 30%; padding-left: 20px;">名前</td>
              <td style="width: 70%;"><%= @user.name %></td>
            </tr>
            <tr>
              <td style="width: 30%; padding-left: 20px;">ニックネーム</td>
              <td style="width: 70%;"><%= @user.nickname %></td>
            </tr>
            <tr>
              <td style="width: 30%; padding-left: 20px;">メールアドレス</td>
              <td style="width: 70%;"><%= @user.email %></td>
            </tr>
          </table>

          <p>フォロー一覧  　　<%= link_to "一覧を見る", user_followings_path(@user), class:"btn btn-primary" %></p>
          <p>フォロワー一覧  　　<%= link_to "一覧を見る", user_followers_path(@user), class:"btn btn-primary" %></p>
          <%= render "public/posts/card" %>

          <!--<p>いいね  　< %= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></p>-->
