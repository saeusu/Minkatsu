<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="underline mt-2"><%= @user.name %>さんのマイページ</h4>

      
        <% if flash[:notice] %>
          <div class="alert alert-success">
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-danger">
            <%= flash[:alert] %>
          </div>
        <% end %>
        
        <div class="row m-2">
          <% if @user.email != "guest@example.com" %>
            <div>
              <%= link_to user_followings_path(@user) do %>
                <span id="followings_cunter" class="name-link">
                  <%= @user.followings.count %>
                </span>
                <span class="relationships-name ml-1">フォロー中</span>
              <% end %>
            </div>
            <div class="ml-3">
              <%= link_to user_followers_path(@user) do %>
                <span id="followers_cunter" class="name-link">
                  <%= @user.followers.count %>
                </span>
                <span class="relationships-name ml-1">フォロワー</span>
              <% end %>
            </div>
          <% end %>
        </div>
        

        
       <div class="row">
        <div class="col-12 col-md-12">
          <% if @user.email != "guest@example.com" %>
            <p>登録情報  <%= link_to "編集する", edit_information_path %></p>
          <% end %>
          
          
            <table class="table">
              <tr>
                <td style="width: 30%; padding-left: 20px;">名前</td>
                <td style="width: 70%;"><%= @user.name %></td>
              </tr>
              <tr>
                <td style="width: 30%; padding-left: 20px;">ニックネーム</td>
                <td style="width: 70%;"><%= @user.nickname %></td>
              </tr>
              <tr>
                <td style="width: 30%; padding-left: 20px;">メールアドレス</td>
                <td style="width: 70%;"><%= @user.email %></td>
              </tr>
            </table>
        </div>
      </div>
      <% if @user.email != "guest@example.com" %>
        <h4 class="underline">投稿一覧</h4>
        <div class="row mt-2">
          <%= render "public/posts/card", posts: @posts %>
        </div>
      <% end %>
    </div>
  </div>
</div>