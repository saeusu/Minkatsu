<div class="container">
  <div class="row">
    <div class="col-4">
      <%= image_tag @post.image, size: "300x300" %>
    </div>
        <div class="col-8">
          <br></br>
          <h4><%= @post.name %></h4>
          <p><%= number_with_delimiter(@post.price) %>円</p>
          <p>アレンジ例：<%= @post.body %></p>
        </div>
        <div>
          <% if current_user && current_user.id == @post.user_id %>
            <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-success" %>
            |
            <%= link_to '削除', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger"%>
          <% end %>  
        </div>
      </div>
    </div>
  </div>
</div>