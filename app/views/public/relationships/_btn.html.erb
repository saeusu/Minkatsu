<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-info", id: "follow-button-#{user.id}" do %>
      <i class="fa-solid fa-user-minus"></i> フォロー外す
    <% end %>
  <% else %>
    <%= link_to user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-success", id: "follow-button-#{user.id}" do %>
      <i class="fa-solid fa-user-plus"></i> フォローする
    <% end %>
  <% end %>
<% end %>
