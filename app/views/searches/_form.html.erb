<% if user_signed_in? %>
  <%= form_with(url: search_path, method: :get, class: "form-row") do |form| %>
    <div class="form-group col-md-4 col-sm-6">
      <%= form.select(:search_target, options_for_select(@search_options.map { |option| [option, option] }, selected: params[:search_target]), { include_blank: false }, class: "form-control") %>
    </div>
    <div class="form-group col-md-6 col-sm-12">
      <%= form.text_field :keyword, placeholder: "キーワードを入力", value: params[:keyword], class: "form-control" %>
    </div>
    <div class="form-group col-md-2 col-sm-12">
      <%= form.button type: :submit, class: "btn btn-primary btn-block" do %>
        <i class="fa-solid fa-magnifying-glass"></i>
      <% end %>
    </div>
  <% end %>
<% end %>