<% if user_signed_in? %>
  <%= form_with(url: search_path, method: :get) do |form| %>
    <%= form.collection_select :search_target, @search_options, :itself, :itself, include_blank: false, selected: 'ユーザー' %>
    <%= form.text_field :keyword, placeholder: "キーワードを入力", value: params[:keyword] %>
    <%= form.hidden_field :method, value: '部分一致' %>
    <%= form.button type: :submit, class: "custom-button" do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  <% end %>
<% end %>
