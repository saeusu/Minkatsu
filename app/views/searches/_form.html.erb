<% if user_signed_in? || admin_signed_in? %>
  <%= form_with(url: search_path, method: :get, class: "form-inline d-flex") do |form| %>
    <div class="form-group mr-2">
      <%= form.select(:search_target, options_for_select(@search_options.map { |option| [option, option] }, selected: params[:search_target]), { include_blank: false }, class: "form-control") %>
    </div>
    <div class="input-group mr-2">
      <%= form.text_field :keyword, placeholder: "キーワードを入力", value: params[:keyword], class: "form-control" %>
      <div class="input-group-append">
        <%= form.button type: :submit, class: "btn btn-primary", id: "button-addon2" do %>
          <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
