<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col'>
      <h4 class="underline mt-2">検索結果</h4>

      <div class="row my-2">
        <div class="col d-flex justify-content-end">
          <%= render "searches/form" %>
        </div>
      </div>

      <div class="mt-2">
        <% if @results.present? %>
          <table class='table'>
            <% @results.each do |result| %>
              <% if result.is_a?(User) %>
                <tr>
                  <th>ユーザー名</th>
                  <td><%= result.nickname %></td>
                  <td><%= link_to '詳細', user_path(result), class:"btn btn-success" %></td>
                </tr>
              <% elsif result.is_a?(Post) %>
                <tr>
                  <th>投稿名</th>
                  <td><%= result.name %></td>
                  <td><%= link_to '詳細', post_path(result), class:"btn btn-success" %></td>
                </tr>
              <% end %>
            <% end %>
          </table>
        <% else %>
          <p>検索結果はありません。</p>
        <% end %>
      </div>

    </div>
  </div>
</div>